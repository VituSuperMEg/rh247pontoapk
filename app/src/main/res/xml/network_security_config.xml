<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuração específica para o domínio RH247 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api.rh247.com.br</domain>
        <domain includeSubdomains="true">rh247.com.br</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
        <pin-set>
            <!-- Desabilita pinning de certificados para aceitar qualquer certificado -->
        </pin-set>
    </domain-config>
    
    <!-- Configuração base mais permissiva -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Configuração para debug (aceita todos os certificados) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
    <!-- Configuração adicional para desenvolvimento -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
    </domain-config>
    
    <!-- Configuração global para aceitar todos os certificados SSL -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">*</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
</network-security-config> 